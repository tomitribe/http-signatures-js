{
  "name": "http-signatures-js",
  "version": "0.0.1",
  "description": "",
  "keywords": [],
  "main": "dist/http-signatures-js.umd.js",
  "module": "dist/http-signatures-js.esm.js",
  "browser": "dist/http-signatures-js.min.js",
  "common": "dist/http-signatures-js.cjs.js",
  "es6": "dist/http-signatures-js.es6.js",
  "packed": "dist/http-signatures-js.pkg.min.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "Apache License 2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tomitribe/http-signatures-js.git"
  },
  "scripts": {
    "prebuild": "rimraf dist && rimraf compiled",
    "build": "rollup -c",
    "//postbuild": "npm run docs",
    "predocs": "rimraf docs",
    "docs": "typedoc --out docs --target es6 --theme markdown --mode file src/index.ts",
    "dev": "rollup -c -w",
    "precommit": "lint-staged",
    "pretest": "npm run build && rimraf coverage",
    "test": "npm run jest",
    "jest": "jest --verbose",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --parser flow --write",
      "git add"
    ],
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverage": false,
    "setupTestFrameworkScriptFile": "./jest.setup.js",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    }
  },
  "dependencies": {
    "ts-tomitribe-util": "0.0.2",
    "jwk-js": "git+https://github.com/tomitribe/jwk-js.git#5c61f35a0c444bf63f964f3fbebfc1a3c406b387"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "babel-register": "^6.26.0",
    "browserify-sign": "^4.0.4",
    "create-hash": "^1.2.0",
    "create-hmac": "^1.1.7",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.17.1",
    "rimraf": "^2.6.3",
    "rollup": "^1.12.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.0.0",
    "rollup-plugin-typescript2": "^0.21.1",
    "subtle": "git+https://github.com/Dexmaster/subtle.git#97bb1842778155a9485df8c0eda84cdfa645468a",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-markdown": "^1.2.1",
    "typescript": "^3.4.5"
  }
}
